{
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "browser": true,
    "amd": true,
    "es6": true
  },
  "plugins": [],
  "globals": {
    "it": true,
    "describe": true,
    "beforeEach": true,
    "afterEach": true,
    "afterAll": true,
    "beforeAll": true,
    "module": true,
    "exports": true
  },
  "parserOptions": {
    "ecmaFeatures": {}
  },
  "rules": {
    "no-console" : 0,
    "arrow-parens": [
      "error"
    ],
    "arrow-spacing": [
      "error"
    ],
    "no-const-assign": [
      "error"
    ],
    "no-var": [
      "error"
    ],
    "object-shorthand": [
      "error"
    ],
    "prefer-arrow-callback": [
      "error"
    ],
    "prefer-const": [
      "error"
    ],
    "prefer-template": [
      "error"
    ],
    "block-scoped-var": [
      "error"
    ],
    "eol-last": [
      "error"
    ],
    "indent": [
      "error",
      2
    ],
    "eqeqeq": [
      "off",
      "always"
    ],
    "camelcase": [
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "off"
    ],
    "no-unused-vars": [
      "error",
      {
        "args": "all",
        "vars": "all",
        "argsIgnorePattern": "^(_.|res|req)"
      }
    ],
    "no-empty": [
      "error"
    ],
    "curly": [
      "error"
    ],
    "no-nested-ternary": [
      "error"
    ]
  }
}
